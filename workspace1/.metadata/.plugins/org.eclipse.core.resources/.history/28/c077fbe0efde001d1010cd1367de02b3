import java.util.Scanner;
import java.util.Random;
public class Practice14 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Random rg = new Random();
		
		System.out.print("컵퓨어의 생성 : ");
		int num = rg.nextInt(3);
		String com;
		if(num==0)
			com = "가위";
		else if (num==1)
			com = "바위";
		else if (num==2)
			com = "보";
		
		
		System.out.print("당신의 입력 : ");
		String you = sc.next();
		while(!you.equals("가위")&&!you.equals("바위")&&!you.equals("보"))
		{
			System.out.println("잘못된 입력입니다. 다시 입력하세요.");
			you = sc.next();
		}
		sc.close();
		
		int winCheck = whoswin(com,you);
		if(winCheck == -1)
			System.out.println("컴퓨터가 이겼습니다.");
		else if(winCheck == 0)
			System.out.println("비겼습니다.");
		else if(winCheck == 1)
			System.out.println("당신이 이겼습니다.");
		
		
	}
	
	public static int whoswin(String com, String you)
	{
		if(com.equals("가위"))
		{
			if(you.equals("바위"))
				return -1;
			else if(you.equals("가위"))
				return 0;
			else if(you.equals("보"))
				return 1;
		}
		else if(com.equals("바위"))
		{
			if(you.equals("바위"))
				return 0;
			else if(you.equals("가위"))
				return -1;
			else if(you.equals("보"))
				return 1;
		}
		else if(com.equals("보"))
		{
			if(you.equals("바위"))
				return -1;
			else if(you.equals("가위"))
				return 1;
			else if(you.equals("보"))
				return 0;
		}
	}

}
