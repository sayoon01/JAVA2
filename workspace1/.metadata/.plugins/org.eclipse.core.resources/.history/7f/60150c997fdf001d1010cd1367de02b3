import java.util.Scanner;
import java.util.Random;

public class Practice16 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		String input;
		String com;
		int win = 0, lose = 0, equal = 0;
		int key;
		
		while(1)
		{
			System.out.println("현재 당신의 전적 : " + win + "승 " + lose + "패 " + equal + "무");
			
			com = computerInput();
			System.out.println("컴퓨터의 입력 : " + com);
			
			System.out.print("당신의 입력 (가위/바위/보) : ");
			input = sc.next();
			
			if(input.equals("그만"))
				break;
			
			key = whoswin(com,input);
			
			if(key == -1)
			{
				System.out.println("컴퓨터가 이겼습니다.");
				lose++;
			}
			else if(key == 0)
			{
				System.out.println("비겼습니다.");
				equal++;		
			}
			else	
			{
				System.out.println("당신이 이겼습니다.");
				win++;
			}
			
		} 
		sc.close();
		
		System.out.println("프로그램을 종료합니다.");
	}
	
	static String computerInput()
	{
		Random rg = new Random();
		
		int randomNum = rg.nextInt(3);
		
		if(randomNum == 0)
			return "가위";
		else if(randomNum == 1)
			return "바위";
		else
			return "보";
	}
	
	static int whoswin(String com, String you)
	{
		if(com.equals(you))
		{return 0;}
		else if(com.equals("가위"))
		{
			if(you.equals("바위"))
				return 1;
			else 
				return -1;
		}
		else if(com.equals("바위"))
		{
			if(you.equals("가위"))
				return -1;
			else 
				return 1;
		}
		else
		{
			if(you.equals("가위"))
				return -1;
			else 
				return 1;
		}
	}

}
